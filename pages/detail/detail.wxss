.detail_main {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.detail_swipeback {
  width: 90%;
  height: 650rpx;
  margin-left: 5%;
  margin-top: 5%;

}

.detail_avator {
  width: 100%;
  height: 100%;
  border-radius: 50rpx;
}

.detail_image {
  width: 90%;
  margin-left: 5%;
  margin-top: 20rpx;
}
.detail_name{
  margin-left: 10%;
  width: 80%;
  margin-top: 20rpx;
  color: black;
  font-size: 40rpx;
  font-weight: bold;
}

.detail_line{
  width: 90%;
  margin-top: 20rpx;
  height: 2rpx;
  margin-left: 5%;
  background-color: #bebebe;
}
.detail_text_pane{
  width: 80%;
  margin-left: 10%;
  display: flex;
  margin-top: 20rpx;
  flex-direction: row;
  align-items: center;
}
.detail_text{
  color:#000000;
  font-size: 30rpx;
}

.detail_text_name{
  
  display: flex;
  color:#707070;
