/* pages/search/search.wxss */
.mainback{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}
.catback {
  margin-top: 20rpx;
  background-color: #f0f0f0;
  margin-left: 5%;
  width: 90%;
  height: 190rpx;
  align-items: center;
  border-radius: 40rpx;
  display: flex;
  flex-direction: row;

}

.catback .cathead {
  margin-left: 20rpx;
  height: 150rpx;
  width: 150rpx;
  border-radius: 35rpx;
}

.catback_des {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  margin-left: 20rpx;
  height: 150rpx;
}

.catback_name {
  font-size: 35rpx;
  font-weight: bold;
  color: black;
}

.catback_inner {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.catback_icon {
  width: 35rpx;
  height: 35rpx;
}

.catback_feature {
  font-size: 27rpx;
  color: #888888;

}