page{
  display: flex;
  flex-direction: column;
  height: 100%;
}
.navbar{
  flex: none;
  display: flex;
  background: #fff;
}
.navbar .item{
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 80rpx;
  color: #888888;
}
.navbar .item.active{
  color: #FFC0CB;
}
.navbar .item.active:after{
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 40rpx;
  right: 40rpx;
  height: 4rpx;
  background: #FFC0CB;
}

.placeholder {
  color: #888888;
  caret-color: #FFC0CB;
}


.catback{
  margin-top: 20rpx;
  background-color: #f0f0f0;
  margin-left: 5%;
  width: 90%;
  height: 190rpx;
  align-items: center;
  border-radius: 40rpx;
  display: flex;
  flex-direction: row;

}

.catback .cathead{
  margin-left: 20rpx;
  height: 150rpx;
  width: 150rpx;
  border-radius: 35rpx;
}

.catback_des {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  margin-left: 20rpx;
  height: 150rpx;
}
.catback_name {
  font-size: 35rpx;
  font-weight: bold;
  color: black;
}
.catback_inner{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.catback_icon {
  width: 35rpx;
  height: 35rpx;
}
.catback_feature{
  font-size: 27rpx;
  color: #888888;

}